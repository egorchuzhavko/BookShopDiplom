<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BookShop.mvvm.View.AdminBookPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="DarkGray">
    <StackLayout VerticalOptions="Center">
        <Button
            Margin="15,20"
            BackgroundColor="#1AC7A8"
            Command="{Binding AddBookOpenPageCommand}"
            CornerRadius="17"
            FontFamily="comforta"
            Text="Добавить книгу"
            TextColor="White"
            VerticalOptions="Center" />
        <Button
            Margin="15,20"
            BackgroundColor="#1AC7A8"
            CornerRadius="17"
            FontFamily="comforta"
            Text="Просмотреть все книги"
            TextColor="White"
            VerticalOptions="Center" />
    </StackLayout>
</ContentPage>